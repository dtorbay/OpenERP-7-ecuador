			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Retention">
					<group>
						<group colspan="4">
 							<field name="retention_type"/>
 							<field name="printer_id"/>
							<field name="number" />
							<field name="partner_id"/>
							<field name="creation_date" required="1" />
							<field name="invoice_id" invisible="0" />
							<field name="currency_id"/>
							<field name="company_id"/>
						</group>
						<group colspan="4">
							<field name="lines_ids" nolabel="1" readonly="0" colspan="4" height="150">
								<tree string="Retention Lines" editable="bottom">
									<!--field name="fiscalyear_id" widget="selection" /-->
									<field name="description" />
									<field name="tax_id" />
									<field name="tax_base" />
									<field name="tax_amount"/>
									<field name="retention_percentage" />
								</tree>
							</field>
						</group>
						<group colspan="4">
							<button colspan="2" icon="gtk-cancel" name="button_cancel"
								special="cancel" string="_Cancel" type="object" />
							<button colspan="2" name="approve_late" string="Confirm Information"
								icon="gtk-apply" type="object" />
						</group>
					</group>
				</form>
			</field>
		</record>

		<record id="action_retention_wizard_sale" model="ir.actions.act_window">
			<field name="name">Complete data Retention</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.retention.wizard</field>
			<field name="context">{'retention_type':'sale'}</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>
			<field name="view_id" ref="retention_wizard_sale_form" />
			<field name="target">new</field>
		</record>

	</data>
</openerp>